{% extends 'backend/base.html.twig' %}

{# {% block title %}Register{% endblock %} #}

{% block body %}
    <!-- Page Title -->
    <div class="pagetitle">
        <h1>{{ pageTitle }}</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
                <li class="breadcrumb-item active">{{ pageTitle }}</li>
            </ol>
        </nav>
    </div>
    <!-- End Page Title -->
    <section class="section contact">
        <div class="row gy-4">

            <!-- Recent Transaction -->
            <div class="col-12">
                <div class="card recent-sales">

                    <div class="card-body pt-3">

                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="card-title">Testimonials <span>({{ testimonials|length }})</span></h5>
                            <div class="mb-2 mb-lg-0">
                                <a href="{{ path('testimonials.new') }}" class="btn btn-sm btn-success"><i class="bi bi-plus"></i> Add Testimonial</a>
                            </div>
                        </div>

                        <table class="table table-borderless datatable">
                            <thead>
                                <tr>
                                    <th scope="col">Id</th>
                                    <th scope="col">Avatar</th>
                                    <th scope="col">Name</th>
{#                                    <th scope="col">Content</th>#}
                                    <th scope="col">Position</th>
                                    <th scope="col">Company</th>
                                    <th scope="col">City</th>
{#                                    <th scope="col">Country</th>#}
                                    <th scope="col">Status</th>
{#                                    <th scope="col">CreatedAt</th>#}
                                    <th scope="col">actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for testimonial in testimonials %}
                                <tr>
                                    <td>{{ testimonial.id }}</td>
                                    <td><img src="{{ asset('uploads/avatars/' ~ testimonial.avatar) }}" alt="" width="30" height="30"></td>
                                    <td>{{ testimonial.name }}</td>
{#                                    <td>{{ testimonial.content }}</td>#}
                                    <td>{{ testimonial.position }}</td>
                                    <td>{{ testimonial.company }}</td>
                                    <td>{{ testimonial.city }}</td>
{#                                    <td>{{ testimonial.country }}</td>#}
                                    <td>{{ testimonial.status }}</td>
{#                                    <td>{{ testimonial.createdAt ? testimonial.createdAt|date('Y-m-d H:i:s') : '' }}</td>#}
                                    <td>
                                        <a href="{{ path('testimonials.edit', {'id': testimonial.id}) }}" class="btn btn-success btn-xs"><i class="bi bi-pencil-square"></i></a>
                                        <a href="{{ path('testimonials.delete', {'id': testimonial.id}) }}"
                                           class="btn btn-danger btn-xs"
                                           onclick="return confirm('Are you sure you want to delete this item?');">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="11" class="text-center">No records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
            <!-- End Recent Transaction -->

        </div>
    </section>
{% endblock %}