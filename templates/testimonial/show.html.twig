<!DOCTYPE html>

<title>Testimonial</title>

{% block body %}
    <h1>Testimonial</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ testimonial.id }}</td>
            </tr>
            <tr>
                <th>Avatar</th>
                <td>{{ testimonial.avatar }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ testimonial.name }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ testimonial.content }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ testimonial.position }}</td>
            </tr>
            <tr>
                <th>Company</th>
                <td>{{ testimonial.company }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ testimonial.city }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ testimonial.country }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ testimonial.status }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ testimonial.createdAt ? testimonial.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_testimonial_index') }}">back to list</a>

    <a href="{{ path('app_testimonial_edit', {'id': testimonial.id}) }}">edit</a>

    {{ include('testimonial/_delete_form.html.twig') }}
{% endblock %}
