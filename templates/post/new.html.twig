{% extends 'backend/base.html.twig' %}

 {% block title %}Create New Post{% endblock %}

{% block body %}
    <!-- Page Title -->
    <div class="pagetitle">
        <h1>{{ pageTitle }}</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/dashboard">Home / New Post</a></li>
                <li class="breadcrumb-item active">{{ pageTitle }}</li>
            </ol>
        </nav>
    </div>
    <!-- End Page Title -->
    <section class="section contact">
        <div class="row gy-4">

            <!-- Contact Form -->
            <div class="col-12">
                <div class="card p-4">
                    <div class="card-body pb-0">

                        {{ form_start(form) }}
                        <div class="row gy-4">
                            <div class="col-md-12">
                                {{ form_row(form.title) }}
                            </div>

                            {# <div class="col-md-12">#}
                                {# {{ form_row(form.slug) }}#}
                            {# </div>#}

                            {#<div class="col-md-12">#}
                                {{ form_row(form.content) }}
                            {#</div>#}

                            {# <div class="col-md-12">
                                {{ form_row(form.excerpt) }}
                            </div> #}

                            <div class="col-md-12">
                                {{ form_row(form.category) }}
                            </div>

                            <div class="col-md-12">
                                {{ form_row(form.status) }}
                            </div>

                            {#<div class="col-md-12">#}
                                {#{{ form_row(form.publishedAt) }}#}
                            {# </div>#}

                            <div class="col-md-12">
                                {{ form_row(form.imagePath) }}
                            </div>

                            <div class="col-md-12 text-center">
                                <button type="submit" class="btn btn-success">Add Post</button>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>

{#    <link href="https://cdnjs.cloudflare.com/ajax/libs/trix/1.3.1/trix.css" rel="stylesheet">#}

{% endblock %}



