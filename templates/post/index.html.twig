{% extends 'backend/base.html.twig' %}

{# {% block title %}Register{% endblock %} #}

{% block body %}
    <!-- Page Title -->
    <div class="pagetitle">
        <h1>{{ pageTitle }}</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
                <li class="breadcrumb-item active">{{ pageTitle }}</li>
            </ol>
        </nav>
    </div>
    <!-- End Page Title -->
    <section class="section contact">
        <div class="row gy-4">

            <!-- Recent Transaction -->
            <div class="col-12">
                <div class="card recent-sales">

                    <div class="card-body pt-3">

                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="card-title">Recent Posts <span>({{ posts|length }})</span></h5>
                            <div class="mb-2 mb-lg-0">
                                <a href="{{ path('post.create') }}" class="btn btn-sm btn-success"><i class="bi bi-plus"></i> Add New Post</a>
                            </div>
                        </div>

                        <table class="table table-borderless datatable">
                            <thead>
                                <tr>
                                    <th scope="col">Id</th>
{#                                    <th scope="col">ImagePath</th>#}
                                    <th scope="col">Title</th>
                                    <th scope="col">Slug</th>
{#                                    <th scope="col">Excerpt</th>#}
{#                                    <th scope="col">Content</th>#}
{#                                    <th scope="col">String</th>#}
                                    <th scope="col">Status</th>
                                    <th scope="col">CreatedAt</th>
{#                                    <th scope="col">PublishedAt</th>#}
{#                                    <th scope="col">ViewCount</th>#}
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for post in posts %}
                                <tr>
                                    <td>{{ post.id }}</td>
{#                                    <td>{{ post.imagePath }}</td>#}
                                    <td><a href="{{ path('articles.single', {'slug': post.slug}) }}" class="text-success">{{ post.title }}</a></td>
                                    <td>{{ post.slug }}</td>
{#                                    <td>{{ post.excerpt }}</td>#}
{#                                    <td>{{ post.content }}</td>#}
{#                                    <td>{{ post.string }}</td>#}
                                    <td>{{ post.status }}</td>
                                    <td>{{ post.createdAt ? post.createdAt|date('M d, Y') : '' }}</td>
{#                                    <td>{{ post.publishedAt ? post.publishedAt|date('Y-m-d H:i:s') : '' }}</td>#}
{#                                    <td>{{ post.viewCount }}</td>#}
                                    <td>
                                        <a href="{{ path('post.edit', {'id': post.id}) }}" class="btn btn-success btn-xs"><i class="bi bi-pencil-square"></i></a>
                                        <a href="{{ path('post.delete', {'id': post.id}) }}"
                                           class="btn btn-danger btn-xs"
                                           onclick="return confirm('Are you sure you want to delete this item?');">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="12" class="text-center">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>

                </div>
            </div><!-- End Recent Transaction -->

        </div>
    </section>

{% endblock %}




