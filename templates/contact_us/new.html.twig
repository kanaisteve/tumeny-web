{% extends 'backend/base.html.twig' %}

{# {% block title %}Register{% endblock %} #}

{% block body %}
    <!-- Page Title -->
    <div class="pagetitle">
        <h1>{{ pageTitle }}</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
                <li class="breadcrumb-item active">{{ pageTitle }}</li>
            </ol>
        </nav>
    </div>
    <!-- End Page Title -->
    <section class="section contact">
        <div class="row gy-4">
            <!-- Contact Form -->
            <div class="col-xl-12">
                <div class="card p-4">
                    <div class="card-body pb-0">
                        {{ form_start(form) }}
                        <div class="row gy-4">
                            <div class="col-md-6">
                                {{ form_row(form.name) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.email) }}
                                {{ form_errors(form.email) }}
                            </div>
                            <div class="col-md-12">
                                {{ form_row(form.subject) }}
                                {{ form_errors(form.subject) }}
                            </div>
                            <div class="col-md-12">
                                {{ form_row(form.body) }}
                                {{ form_errors(form.body) }}
                            </div>
                            <div class="col-md-12 text-center">
                                {{ form_row(form.save, { 'label': 'Send Message' }) }}
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
