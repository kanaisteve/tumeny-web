{% extends 'backend/base.html.twig' %}

{# {% block title %}Register{% endblock %} #}

{% block body %}
<!-- Page Title -->
<div class="pagetitle">
  <h1>{{ pageTitle }}</h1>
  <nav>
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
      <li class="breadcrumb-item active">{{ pageTitle }}</li>
    </ol>
  </nav>
</div>
<!-- End Page Title -->
<section class="section contact">
    <div class="row gy-4">

        <!-- Recent Transaction -->
        <div class="col-12">
            <div class="card recent-sales">

                <div class="card-body pt-3">
                    
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-title">Total Suppliers <span>({{ suppliers|length }})</span></h5>
                        <div class="mb-2 mb-lg-0">
                            <a href="{{ path('create_supplier') }}" class="btn btn-sm btn-success"><i class="bi bi-plus"></i> Add New Supplier</a>
                        </div>
                    </div>
                    
                    <table class="table table-borderless datatable">
                        <thead>
                            <tr>
                                {# <th scope="col">Date</th> #}
                                <th scope="col">Supplier</th>
                                <th scope="col">Contact Person</th>
                                <th scope="col">Email</th>
                                <th scope="col">Mobile Number</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {# <tr>
                                <td>Brandon Jacob</td>
                                <td><a href="#" class="text-success">Laptop</a></td>
                                <td>K64</td>
                                <td>
                                    <span class="btn btn-info btn-xs"><i class="bi bi-eye"></i></span>
                                    <span class="btn btn-success btn-xs"><i class="bi bi-pencil-square"></i></span>
                                </td>
                            </tr> #}
                            {% for supplier in suppliers %}
                            <tr>
                                {# <th scope="row"><a href="#">2022-05-17</a></th> #}
                                <td>{{ supplier.businessName }}</td>
                                <td>{{ supplier.contactPerson }}</td>
                                <td><a href="#" class="text-success">{{ supplier.email }}</a></td>
                                <td>{{ supplier.mobileNumber }}</td>
                                <td>
                                    {# <span class="btn btn-info btn-xs"><i class="bi bi-eye"></i></span> #}
                                    <span class="btn btn-success btn-xs"><i class="bi bi-pencil-square"></i></span>
                                    <span class="btn btn-danger btn-xs"><i class="bi bi-trash"></i></span>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

            </div>
        </div><!-- End Recent Transaction -->

    </div>
</section>
{% endblock %}

