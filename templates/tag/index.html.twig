{% extends 'backend/base.html.twig' %}

{# {% block title %}Register{% endblock %} #}

{% block body %}
    <!-- Page Title -->
    <div class="pagetitle">
        <h1>{{ pageTitle }}</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
                <li class="breadcrumb-item active">{{ pageTitle }}</li>
            </ol>
        </nav>
    </div>
    <!-- End Page Title -->
    <section class="section contact">
        <div class="row gy-4">
            <!-- Add Blog Tag -->
            <div class="col-xl-4">
                <div class="card recent-sales">

                    <div class="card-body pt-3">

                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="card-title">Add Tag</h5>
                        </div>

                        {{ form(form) }}
                    </div>

                </div>
            </div><!-- End Add Blog Tag -->

            <!-- Recent Categories -->
            <div class="col-xl-8">
                <div class="card recent-sales">

                    <div class="card-body pt-3">

                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="card-title">Tags <span>({{ tags|length }})</span></h5>
{#                            <div class="mb-2 mb-lg-0">#}
{#                                <a href="{{ path('tags.new') }}" class="btn btn-sm btn-success"><i class="bi bi-plus"></i> Add Tag</a>#}
{#                            </div>#}
                        </div>

                        <table class="table table-borderless datatable">
                            <thead>
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">Name</th>
                                <th scope="col">Slug</th>
                                <th scope="col">actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for tag in tags %}
                                <tr>
                                    <td>{{ tag.id }}</td>
                                    <td>{{ tag.name }}</td>
                                    <td>{{ tag.slug }}</td>
                                    <td>
                                        {# <a href="{{ path('tags.show', {'id': tag.id}) }}" class="btn btn-warning btn-xs"><i class="bi bi-eye"></i></a>#}
                                        <a href="{{ path('tags.edit', {'id': tag.id}) }}" class="btn btn-success btn-xs"><i class="bi bi-pencil-square"></i></a>
                                        <a href="{{ path('tags.delete', {'id': tag.id}) }}"
                                           class="btn btn-danger btn-xs"
                                           onclick="return confirm('Are you sure you want to delete this item?');">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4" class="text-center">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>

                </div>
            </div><!-- End Recent Categories -->

        </div>
    </section>
{% endblock %}
