{% extends 'backend/base.html.twig' %}

{# {% block title %}Register{% endblock %} #}

{% block body %}
    <!-- Page Title -->
    <div class="pagetitle">
        <h1>{{ pageTitle }}</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
                <li class="breadcrumb-item active">{{ pageTitle }}</li>
            </ol>
        </nav>
    </div>
    <!-- End Page Title -->
    <section class="section contact">
        <div class="row gy-4">

            <!-- Recent Transaction -->
            <div class="col-12">
                <div class="card recent-sales">

                    <div class="card-body pt-3">

                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="card-title">Staff Members <span>({{ teams|length }})</span></h5>
                            <div class="mb-2 mb-lg-0">
                                <a href="{{ path('team.new') }}" class="btn btn-sm btn-success"><i class="bi bi-plus"></i> Add Staff Member</a>
                            </div>
                        </div>

                        <table class="table table-borderless datatable">
                            <thead>
                                <tr>
                                    <th scope="col">Id</th>
{#                                    <th scope="col">ImagePath</th>#}
                                    <th scope="col">FirstName</th>
                                    <th scope="col">LastName</th>
                                    <th scope="col">JobTitle</th>
{#                                    <th scope="col">About</th>#}
{#                                    <th scope="col">Facebook</th>#}
{#                                    <th scope="col">Twitter</th>#}
{#                                    <th scope="col">Linkedin</th>#}
{#                                    <th scope="col">Instagram</th>#}
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for team in teams %}
                                <tr>
                                    <td>{{ team.id }}</td>
{#                                    <td><img src="{{ asset('uploads/avatars/' ~ team.imagePath) }}" alt="" width="30" height="30"></td>#}
                                    <td>{{ team.firstName }}</td>
                                    <td>{{ team.lastName }}</td>
                                    <td>{{ team.jobTitle }}</td>
{#                                    <td>{{ team.about }}</td>#}
{#                                    <td>{{ team.facebook }}</td>#}
{#                                    <td>{{ team.twitter }}</td>#}
{#                                    <td>{{ team.linkedin }}</td>#}
{#                                    <td>{{ team.instagram }}</td>#}
                                    <td>
{#                                        <a href="{{ path('team.show', {'id': team.id}) }}" class="btn btn-success btn-xs"><i class="bi bi-eye"></i></a>#}
                                        <a href="{{ path('team.edit', {'id': team.id}) }}" class="btn btn-warning btn-xs"><i class="bi bi-pencil-square"></i></a>
                                        <a href="{{ path('team.delete', {'id': team.id}) }}"
                                           class="btn btn-danger btn-xs"
                                           onclick="return confirm('Are you sure you want to delete this item?');">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="11" class="text-center">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
            <!-- End Recent Transaction -->

        </div>
    </section>
{% endblock %}