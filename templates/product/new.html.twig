{% extends 'backend/base.html.twig' %}

{# {% block title %}Register{% endblock %} #}

{% block body %}
<!-- Page Title -->
<div class="pagetitle">
  <h1>{{ pageTitle }}</h1>
  <nav>
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/dashboard">Home / Products</a></li>
      <li class="breadcrumb-item active">{{ pageTitle }}</li>
    </ol>
  </nav>
</div>
<!-- End Page Title -->
<section class="section contact">
  <div class="row gy-4">

    <!-- Contact Form -->
    <div class="col-12">
      <div class="card p-4">
        <div class="card-body pb-0">

            {{ form_start(form) }}
                <div class="row gy-4">
                    <div class="col-md-12">
                        {{ form_row(form.name) }}
                    </div>

                    <div class="col-md-12">
                        {{ form_row(form.slug) }}   
                    </div>

                    <div class="col-md-12">
                        {{ form_row(form.price) }}
                    </div>

                    <div class="col-md-12">
                        {{ form_row(form.vat) }}
                    </div>

                    <div class="col-md-12">
                        {{ form_row(form.priceWithVat) }}
                    </div>

                    <div class="col-md-12">
                        {{ form_row(form.productImage) }}
                    </div>

                    <div class="col-md-12">
                        {{ form_row(form.description) }}
                    </div>

                    <div class="col-md-12 text-center">
                        <button type="submit" class="btn btn-success">Add Sale</button>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
      </div>
    </div>
  </div>
</section>
{% endblock %}


