{% extends 'backend/base.html.twig' %}

{# {% block title %}Register{% endblock %} #}

{% block body %}
    <!-- Page Title -->
    <div class="pagetitle">
        <h1>{{ pageTitle }}</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
                <li class="breadcrumb-item active">{{ pageTitle }}</li>
            </ol>
        </nav>
    </div>
    <!-- End Page Title -->
    <section class="section contact">
        <div class="row gy-4">

            <!-- Recent Transaction -->
            <div class="col-12">
                <div class="card recent-sales">

                    <div class="card-body pt-3">

                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="card-title">Users <span>({{ users|length }})</span></h5>
                            <div class="mb-2 mb-lg-0">
                                <a href="{{ path('users.new') }}" class="btn btn-sm btn-success"><i class="bi bi-plus"></i> Add User</a>
                            </div>
                        </div>

                        <table class="table table-borderless datatable">
                            <thead>
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">Name</th>
{#                                <th scope="col">FirstName</th>#}
{#                                <th scope="col">LastName</th>#}
                                <th scope="col">Email</th>
                                <th scope="col">MobileNumber</th>
                                <th scope="col">Roles</th>
{#                                <th scope="col">Password</th>#}
                                <th scope="col">Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for user in users %}
                                <tr>
                                    <td>{{ user.id }}</td>
                                    <td>{{ user.firstName }} {{ user.lastName }}</td>
{#                                    <td>{{ user.firstName }}</td>#}
{#                                    <td>{{ user.lastName }}</td>#}
                                    <td>{{ user.email }}</td>
                                    <td>{{ user.mobileNumber }}</td>
                                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
{#                                    <td>{{ user.password }}</td>#}
                                    <td>
                                        {# <a href="{{ path('users.show', {'id': user.id}) }}" class="btn btn-success btn-xs"><i class="bi bi-eye"></i></a>#}
                                        <a href="{{ path('users.edit', {'id': user.id}) }}" class="btn btn-warning btn-xs"><i class="bi bi-pencil-square"></i></a>
                                        <a href="{{ path('users.add.role', {'id': user.id}) }}" class="btn btn-info btn-xs"><i class="bi bi-key"></i></a>
                                        <a href="{{ path('users.delete', {'id': user.id}) }}"
                                           class="btn btn-danger btn-xs"
                                           onclick="return confirm('Are you sure you want to delete this user?');">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="8">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
            <!-- End Recent Transaction -->

        </div>
    </section>
{% endblock %}
