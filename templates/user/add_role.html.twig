{% extends 'backend/base.html.twig' %}

 {% block title %}Add User{% endblock %}

{% block body %}
    <!-- Page Title -->
    <div class="pagetitle">
        <h1>{{ pageTitle }}</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('users.index') }}">Home / Users</a></li>
                <li class="breadcrumb-item active">{{ pageTitle }}</li>
            </ol>
        </nav>
    </div>
    <!-- End Page Title -->
    <section class="section contact">
        <div class="row gy-4">

            <!-- Add User Form -->
            <div class="col-12">
                <div class="card p-4">
                    <div class="card-body pb-0">

                        {# {{ form_start(form, {'action': path('register'), 'method': 'POST'}) }}#}
                        {{ form_start(form) }}
                        {{ form_errors(form) }}
                        <div class="row gy-4">
                            <div class="col-md-12">
                                {{ form_row(form.role) }}
                                {#{{ form_errors(form.role) }}#}
                            </div>

                            <div class="col-md-12 text-center">
                                {{ form_row(form.save, { 'label': 'Add New Role' }) }}
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
            <!-- End Add User Form -->
        </div>
    </section>
{% endblock %}
